
<FlatButton@ButtonBehavior+Label>:
	font_size:14

<CashierWindow>:
	id: main_win
	orientation: 'vertical'
	canvas.before:
		Color:
			rgba: (1,1,1,1)
		Rectangle:
			size: self.size
			pos: self.pos

	BoxLayout:
		id: header
		size_hint_y: None
		height: 40
		canvas.before:
			Color:
				rgba: (.06, .45, .45, 1)
			Rectangle:
				size: self.size
				pos: self.pos
		Label:
			text: "Dumba Maniax POS"
			size_hint_x: .9
			bold: True
			color: (1,1,1,1)
		FlatButton:
			id: logged_in_user
			text: "dumba"
			color: (1,1,1,1)

	BoxLayout:
		id: current
		size_hint_y: 50
		canvas.before:
			Color:
				rgba: (.06, .45, .45, 1)
			Rectangle:
				size: self.size
				pos: self.pos
		Button:
			text: "Current Item"
			background_normal: ""
			background_color: (.06, .32, .32, 1)
		Button:
			id: cur_product
			text: "Default Product"
			background_normal: ""
			background_color: (.06, .4, .4, 1)
		Button:
			id: cur_price
			text: "0.0"
			background_normal: ""
			background_color: (.06, .65, .65, 1)




















